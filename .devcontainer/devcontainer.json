{
	"name": "AIST 3410 w/ MariaDB",

	"dockerComposeFile": "docker-compose.yml",
	"service": "aist3410-mariadb",
	"workspaceFolder": "/workspaces",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"cweijan.vscode-mysql-client2"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "${localEnv:GITHUB_USER}",
			"userUid": "1999",
			"userGid": "1999"
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],


	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "mkdir -p $HOME/.config/vscode-dev-containers/ && touch $HOME/.config/vscode-dev-containers/first-run-notice-already-displayed"
	"postCreateCommand": "sudo echo > /workspaces/.codespaces/shared/first-run-notice.txt",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "${localEnv:GITHUB_USER}",
	"containerUser": "${localEnv:GITHUB_USER}"
}
